<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image_type"
        android:layout_width="@dimen/icon_min_size"
        android:layout_height="@dimen/icon_min_size"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_payment_credit"
        android:contentDescription="@string/content_description_payment_type_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_type"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        tools:text="CREDIT"
        />


</androidx.constraintlayout.widget.ConstraintLayout>